@{
    ViewData["Title"] = "Cargar usuario";
}

@model WebCadeteria.ViewModels.CargarUsuarioViewModel

@inject IHttpContextAccessor HttpContextAccessor
@{
    var rol = HttpContextAccessor.HttpContext?.Session.GetString("Rol");
}

<div class="container-principal">
    <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom">
        <h3 class="col-md-2 text-start"class="navbar-brand">CadeteriaWeb</h3>
        <nav class="col-md-8">
            <ul class="menu">
                <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                <li><a asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                @{
                    if(rol == "Administrador"){
                        <li>
                            <a href="#">Cadete</a>
                            <ul class="submenu">
                                <li class="text-center"><a asp-controller="Cadete" asp-action="Index">Listar Cadetes</a></li>
                                <li class="text-center"><a asp-controller="Cadete" asp-action="CargarCadete">Cargar Cadete</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Cliente</a>
                            <ul class="submenu">
                                <li class="text-center"><a asp-controller="Cliente" asp-action="Index">Listar Clientes</a></li>
                                <li class="text-center"><a asp-controller="Cliente" asp-action="CargarCliente">Cargar Cliente</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Pedido</a>
                            <ul class="submenu">
                                <li class="text-center"><a asp-controller="Pedido" asp-action="Index">Listar Pedidos</a></li>
                                <li class="text-center"><a asp-controller="Pedido" asp-action="AgregarPedido">Cargar Pedido</a></li>
                            </ul>
                        </li>
                        <li>
                            <a href="#">Usuario</a>
                            <ul class="submenu">
                                <li class="text-center"><a asp-controller="Usuario" asp-action="Index">Listar Usuarios</a></li>
                                <li class="text-center"><a asp-controller="Usuario" asp-action="CargarUsuario">Cargar Usuario</a></li>
                            </ul>
                        </li>
                    }else{
                        <li>
                            <a href="#">Pedido</a>
                            <ul class="submenu">
                                <li class="text-center"><a asp-controller="Pedido" asp-action="Index">Listar Pedidos</a></li>
                            </ul>
                        </li>
                    }
                }
            </ul>
        </nav>    

        <div class="col-md-2 text-end">
            <button  type="button" class="btn btn-outline-dark me-2" width="100%">
                <a asp-controller="Sesion" asp-action="Logout" class="nav-link px-4">Cerrar Sesión</a>
            </button>
            
        </div>
    </header>

    <div class="middle-section">
        <form class="row g-3" asp-controller="Usuario" asp-action="CargarUsuario" method="post">
            <div class="col-12">
                <label class="form-label" asp-for="@Model.Nombre">Nombre:</label>
                <input type="text" class="form-control" asp-for="@Model.Nombre" placeholder="Ingrese el nombre">
                <span asp-validation-for="@Model.Nombre"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="@Model.User">Nombre de usuario:</label>
                <input type="text" class="form-control" asp-for="@Model.User" placeholder="Ingrese el nombre de usuario">
                <span asp-validation-for="@Model.User"></span>
            </div>
            <div class="col-12">
                <label class="form-label" asp-for="@Model.Passwd">Contraseña:</label>
                <input type="password" class="form-control" asp-for="@Model.Passwd" placeholder="Ingrese la contraseña">
                <span asp-validation-for="@Model.Passwd"></span>
            </div>
            <div class="col-md-4">
                <label class="form-label" asp-for="@Model.Rol">Rol:</label>
                <select id="inputState" class="form-select" asp-for="@Model.Rol">
                    <option selected value="Cadete">Cadete</option>
                    <option value="Administrador">Administrador</option>
                </select>
                <span asp-validation-for="@Model.Rol"></span>
            </div>
        
            <div class="col-12">
                <button type="submit" class="btn btn-dark">Enviar</button>
            </div>
        </form>
    </div>
        
    <footer class="py-3">
        <p class="text-center text-body-secondary">© 2022 WebCadeteria</p>
    </footer>
</div>

@section Scripts { <partial name = "_ValidationScriptsPartial" /> } 