@{
    ViewData["Title"] = "Listar Pedidos";
}

<div class="text-center">
    <h2>Pedidos en el sistema</h2>
    <table>
        <thead>
            <tr>
                <th>Numero</th>
                <th>Observacion</th>
                <th>Estado</th>
                <th>Telefono del cliente</th>
                <th>Eliminar</th>
                <th>Modificar</th>
            </tr>
        </thead>
        <tbody>
            @{
                string path = @"Recursos\pedidos.csv";
                
                string[]leer = System.IO.File.ReadAllLines(path);
            }
            @foreach (string item in leer)
            {
                string[]linea = item.Split(";");
                <TR>
                    <TD>@linea[0]</TD>
                    <TD>@linea[1]</TD>
                    <TD>@linea[2]</TD>
                    <TD>@linea[3]</TD>

                    <TD>
                        <a href="@Url.Action("BajarPedido","Pedido", new { id = linea[0] } )">
                            Eliminar
                        </a>   
                    </TD>

                    <TD> 
                        <a href="@Url.Action("ModificarPedido","Pedido", new { id = linea[0] } )">
                            Modificar
                        </a>       
                    </TD>
                </TR>
            }
    </table>
    
    
</div>